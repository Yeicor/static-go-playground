{
    "compilerOptions": {
      "module": "es6",
      "jsx": "react",
      "target": "es5",
      "sourceMap": true,
      "outDir": "dist/",
      "allowJs": true,
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "pretty": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "skipLibCheck": true,
      "baseUrl": "./"
    },
    "include": ["src/**/*.tsx", "src/**/*.ts"],
    "exclude": ["node_modules", "typings/*"]
  }
  